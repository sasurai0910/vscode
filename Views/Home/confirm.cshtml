@model List<string>
@{
    ViewData["Title"] = "登録確認画面";
}

<head>
    <link rel="stylesheet" href="~/css/confirm.css" />
</head>

<div class="text-center">
    <h2>入力内容の確認</h2>

    @for (int i = 0; i < Model.Count; i++)
    {
        <textarea class="confirm-text">項目 @(i + 1): @Model[i]</textarea>
    }

    <form asp-action="Confirm" method="post">
        <button type="submit" class="btn btn-primary mt-3">登録する</button>
    </form>
</div>
